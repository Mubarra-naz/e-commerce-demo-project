<div class="card-body border-bottom border-3 border-primary">
  <%= form_for [:admin, @category] do |f| %>
    <%= render 'shared/errors', item: @category %>

    <div class="form-group mt-2">
      <%= f.label :name, class: "form-label" %>
      <%= f.text_field :name, autofocus: true, class: "form-control" %>
    </div>

    <%= f.submit class: "btn mt-4 px-3 btn-primary" %>
  <% end %>
</div>
