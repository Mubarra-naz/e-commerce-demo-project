<div class="card-body border-bottom border-3 border-primary">
  <%= form_for [:admin, @coupon] do |f| %>
    <%= render 'shared/errors', item: @coupon %>

    <div class="form-group mt-2">
      <%= f.label :name, class: "form-label" %>
      <%= f.text_field :name, autofocus: true, class: "form-control" %>
    </div>

    <div class="form-group mt-2">
      <%= f.label :discount, value: 'Discount Value', class: "form-label" %>
      <%= f.text_field :discount, autofocus: true, class: "form-control" %>
    </div>

    <div class="form-group mt-2">
      <%= f.label :discount_type, class: "form-label" %>
      <%= f.select :discount_type, Coupon::TYPE, {}, { class: "form-control" } %>
    </div>

    <div class="form-group mt-2">
      <%= f.label :product_ids, value: 'Products', class: "form-label" %>
      <%= f.select :product_ids, select_options('product', :title), {}, multiple: true, class: "form-control js-example-basic-multiple dropper" %>
    </div>

    <%= f.submit class: "btn mt-4 px-3 btn-primary" %>
  <% end %>
</div>
