<div class="card-body border-bottom border-3 border-primary">
  <%= form_for [:admin, @product] do |f| %>
    <%= render 'shared/errors', item: @product %>

    <div class="form-group mt-2">
      <%= f.label :title, class: "form-label" %>
      <%= f.text_field :title, autofocus: true, class: "form-control" %>
    </div>

    <div class="form-group mt-2">
      <%= f.label :price, class: "form-label" %>
      <%= f.text_field :price, autofocus: true, class: "form-control" %>
    </div>

    <div class="form-group mt-2">
      <%= f.label :description, class: "form-label" %>
      <%= f.rich_text_area :description, autofocus: true, autocomplete: "description", class: "form-control" %>
    </div>

    <div class="form-group mt-2">
      <%= f.label :status, class: "form-label" %>
      <%= f.select :status, Product::STATUS, {include_blank: true}, { class: "form-control" } %>
    </div>

    <div class="form-group mt-2">
      <%= f.label :category_id, class: "form-label" %>
      <%= f.select :category_id, select_options('category', :name), {include_blank: true}, { class: "form-control dropper" } %>
    </div>

    <div class="form-group mt-2">
      <%= f.file_field :images, multiple: true%>
    </div>

    <div class="form-group mt-2">
      <%= f.file_field :images, multiple: true%>
    </div>

    <div class="form-group mt-2">
      <%= f.file_field :images, multiple: true%>
    </div>

    <%= f.submit class:"btn mt-4 px-3 btn-primary " %>
  <% end %>
</div>
