<% if item.errors.any? %>
  <div class="text-danger">
    <p>
      <%= item.errors.count %> errors prohibited this action on <%= item.class.name %>
    </p>
    <ul>
      <% item.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  </div>
<% end %>
