<header class="py-3 mb-4 border-bottom border-primary">
  <div class="container d-flex flex-wrap justify-content-center">
    <div class="me-auto d-flex m-1">
      <h3 class="mt-1 me-4">Users Database</h3>
      <%= link_to 'Export to CSV', admin_users_path(format: :csv), class: "btn btn-primary m-1" %>
    </div>

    <%= form_with url: admin_users_path, html: { method: :get }, class: 'd-flex' do |f| %>
      <div class="form-group m-1">
        <%= f.text_field :query, type: 'search', placeholder: 'Search Users', aria_label: 'Search', class: "form-control" %>
      </div>

      <div class="actions m-1">
        <%= f.submit "Search", class: "btn btn-outline-primary" %>
      </div>
    <% end %>
  </div>
</header>
