<% if params[:action] == 'index' %>
  <%= link_to "View", admin_product_path(product), class: 'btn btn-success' %>
<% end %>

<% if params[:action] != 'index' %>
  <%= link_to "Back", 'javascript:history.back()', class: 'btn btn-success px-3 mx-1' %>
<% end %>

<% if params[:action] != 'edit' %>
  <%= link_to "Edit", edit_admin_product_path(product), class: 'btn btn-warning px-3 mx-1' %>
<% end %>

<%= link_to "Delete", admin_product_path(product), method: :delete, data: {confirm: "Are you sure"}, class: 'btn btn-danger px-3 mx-1' %>
