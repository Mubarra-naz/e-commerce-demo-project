<% if params[:action] == 'index' %>
  <%= link_to "View", { controller: params[:controller], action: :show, id: item }, class: 'btn btn-success' %>
<% end %>

<% unless params[:action] == 'index' %>
  <%= link_to "Back", 'javascript:history.back()', class: 'btn btn-success px-3 mx-1' %>
<% end %>

<% unless params[:action] == 'edit' %>
  <%= link_to "Edit", { controller: params[:controller], action: :edit, id: item }, class: 'btn btn-warning px-3 mx-1' %>
<% end %>

<%= link_to "Delete", { controller: params[:controller], action: :show, id: item }, method: :delete, data: { confirm: "Are you sure" }, class: 'btn btn-danger px-3 mx-1' %>
